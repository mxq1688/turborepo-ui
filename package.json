{
  "name": "ui-components-library",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:react": "turbo run dev --filter=@ui-lib/docs-react",
    "dev:vue": "turbo run dev --filter=@ui-lib/docs-vue",
    "dev:vitepress": "turbo run dev --filter=@ui-lib/docs-vitepress",
    "dev:storybook": "turbo run dev --filter=@ui-lib/docs-storybook",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "eslint": "^8.48.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
